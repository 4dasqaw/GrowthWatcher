<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_iv_profil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>
        <!--android:src=""-->

    <Button
        android:id="@+id/profile_change_profil_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change PP"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/profile_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/profile_et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Votre nouveau pseudo"/>

        <Button
            android:id="@+id/profile_change_username_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change username"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/profile_progressbar"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>

</LinearLayout>